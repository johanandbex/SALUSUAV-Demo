@using SALUSUAV_Demo.Models.UAVData
@model UavData

@{
    ViewData["Title"] = "SALUS UAV";
}

<h2>Create</h2>

<h4>UAVData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseYear" class="control-label"></label>
                <input asp-for="PurchaseYear" class="form-control" />
                <span asp-validation-for="PurchaseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxWindSpeed" class="control-label"></label>
                <input asp-for="MaxWindSpeed" class="form-control" />
                <span asp-validation-for="MaxWindSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxAltitude" class="control-label"></label>
                <input asp-for="MaxAltitude" class="form-control" />
                <span asp-validation-for="MaxAltitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="BeyondSightEnabled" /> @Html.DisplayNameFor(model => model.BeyondSightEnabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="SafetyMechanism" /> @Html.DisplayNameFor(model => model.SafetyMechanism)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
